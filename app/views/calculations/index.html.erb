<p id="notice"><%= notice %></p>

<h1>Calculations</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Currency</th>
      <th>Principal</th>
      <th>Interest rate</th>
      <th>Years</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calculations.each do |calculation| %>
      <tr>
        <td><%= calculation.name %></td>
        <td><%= calculation.currency %></td>
        <td><%= calculation.principal %></td>
        <td><%= calculation.interest_rate %></td>
        <td><%= calculation.years %></td>
        <td><%= link_to 'Show', calculation %></td>
        <td><%= link_to 'Edit', edit_calculation_path(calculation) %></td>
        <td><%= link_to 'Destroy', calculation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Calculation', new_calculation_path, class:"btn btn-primary" %>
